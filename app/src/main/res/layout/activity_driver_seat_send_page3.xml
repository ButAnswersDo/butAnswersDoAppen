<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vilket stämmer bäst överens med ditt fel?"
        android:id="@+id/textView7"
        android:layout_column="1" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Förarmick ur funktion"
        android:id="@+id/checkBox1"
        android:checked="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBox2"
        android:layout_alignParentLeft="true"
        android:layout_column="1"
        android:layout_row="0"
        android:onClick="onClickCheckBox1"/>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radiospelare ur funktion"
        android:id="@+id/checkBox2"
        android:checked="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="3"
        android:layout_column="1"
        android:onClick="onClickCheckBox2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Övrig kommentar"
        android:id="@+id/textView8"
        android:layout_column="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_column="1"
        android:layout_row="1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="2"
        android:layout_column="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Åtgärda under dagen"
            android:id="@+id/button2"
            android:layout_column="1"
            android:onClick="helpNowDriverSeat3"
            android:layout_gravity="top" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Åtgärda ikväll"
            android:id="@+id/button3"
            android:onClick="helpLaterDriverSeat3"
            android:layout_column="2"
            android:layout_gravity="top" />

        <ImageView android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:background="@drawable/logo6" />

    </LinearLayout>

</TableLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#DCE775"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/errorLogg1"
        android:gravity="center"
        android:layout_marginTop="61dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ã„ndra i felrapporten"
        android:id="@+id/cancelButton"
        android:onClick="cancelReport"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/sendButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skicka felrapporten"
        android:id="@+id/sendButton"
        android:onClick="sendReport"
        android:layout_below="@+id/errorLogg2"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="69dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:gravity="center"
        android:id="@+id/errorLogg2"
        android:layout_below="@+id/errorLogg1"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Felrapport: "
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textColor="#000000" />

</RelativeLayout>
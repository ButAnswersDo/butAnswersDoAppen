<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vbrigel.app00.SecondDoorPage"
    tools:showIn="@layout/activity_second_door_page">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"
        android:columnCount="3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vilken dörr är det fel på?"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="280dp"
            android:layout_height="163dp"
            android:id="@+id/imageButton2"
            android:onClick="doorError"
            android:src="@drawable/framdorr"
            android:adjustViewBounds="true"
            android:maxWidth="300dp"
            android:maxHeight="200dp"
            android:minHeight="10dp"
            android:scaleType="fitCenter"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Fram"
            android:id="@+id/textView3"
            android:layout_row="1"
            android:layout_column="1"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="281dp"
            android:layout_height="162dp"
            android:id="@+id/imageButton3"
            android:onClick="middleBusDoor"
            android:src="@drawable/mittdorr"
            android:adjustViewBounds="true"
            android:maxWidth="300dp"
            android:maxHeight="200dp"
            android:minHeight="10dp"
            android:scaleType="fitCenter"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="0dp"
            android:layout_alignBottom="@+id/imageButton2"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mitten"
            android:id="@+id/textView4"
            android:layout_row="2"
            android:layout_column="1"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="281dp"
            android:layout_height="162dp"
            android:id="@+id/imageButton4"
            android:onClick="backBusDoor"
            android:src="@drawable/bakdorr"
            android:cropToPadding="false"
            android:visibility="visible"
            android:adjustViewBounds="true"
            android:maxWidth="300dp"
            android:maxHeight="200dp"
            android:minHeight="10dp"
            android:scaleType="fitCenter"
            android:layout_below="@+id/imageButton3"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Bak"
            android:id="@+id/textView5"
            android:layout_row="3"
            android:layout_column="1"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center" />

    </GridLayout>
</RelativeLayout>

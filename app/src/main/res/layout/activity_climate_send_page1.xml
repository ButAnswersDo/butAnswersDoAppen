<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:onClick="helpNowClimate">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vilket stämmer bäst överens med ditt fel?"
        android:id="@+id/textView7"
        android:layout_column="1" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blåset funkar inte"
            android:id="@+id/checkBox3"
            android:checked="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="3"
            android:layout_column="6"
            android:onClick="onClickCheckBox3"
            android:scaleX="1"
            android:scaleY="1"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Det är för varmt"
            android:id="@+id/checkBox1"
            android:checked="false"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/checkBox2"
            android:layout_alignParentLeft="true"
            android:layout_column="6"
            android:layout_row="0"
            android:onClick="onClickCheckBox1"
            android:scaleX="1"
            android:scaleY="1"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Det är för kallt"
            android:id="@+id/checkBox2"
            android:checked="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="3"
            android:layout_column="6"
            android:onClick="onClickCheckBox2"
            android:scaleX="1"
            android:scaleY="1"/>

    </TableRow>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Övrig kommentar"
            android:id="@+id/textView8"
            android:layout_column="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_column="1"
            android:layout_row="1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Åtgärda under dagen"
            android:id="@+id/button2"
            android:layout_column="1"
            android:onClick="helpNowClimate"
            android:layout_gravity="top" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Åtgärda ikväll"
            android:id="@+id/button3"
            android:onClick="helpLaterClimate"
            android:layout_column="2" />
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:background="@drawable/logo6" />
    </TableRow>

</TableLayout>
